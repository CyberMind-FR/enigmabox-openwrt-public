
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface '{{vars.g.internet_interface}}'
	option ifname '{{vars.g.internet_interface}}'
	option proto 'dhcp'

{{#vars.g.internal_interfaces}}
config interface '{{.}}'
	option ifname '{{.}}'
	option proto 'static'
	option ipaddr '{{#.}}{{.}}{{/.}}'
	option netmask '255.255.255.0'
{{/vars.g.internal_interfaces}}

config globals 'globals'
	option ula_prefix 'fd9a:6a77:bce8::/48'

