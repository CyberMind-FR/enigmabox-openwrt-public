; extensions.conf - the Asterisk dial plan

[incoming]
exten => _X.,1,Answer()
exten => _X.,2,Dial(SIP/100,30)
exten => _X.,3,Hangup()

[friends]
{{#addresses}}
exten => {{phone}},1,Dial(SIP/${EXTEN}@{{name}})
{{/addresses}}

;echo test
