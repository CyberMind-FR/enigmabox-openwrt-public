#!/opt/cfengine/bin/cf-agent --inform

bundle common g
{
  vars:
      "workdir" string => "/opt/enigmabox/cfengine-policies";
      "site" string => "/box/.cf-site.json";
}



body common control
{
      inputs => {
		  "$(g.workdir)/lib/files.cf",
		  "$(g.workdir)/system_network/bundle.cf",
		  "$(g.workdir)/app_asterisk/bundle.cf",
      };

      bundlesequence => {
			  "system_network",
			  "app_asterisk",
      };
}

body perms script
{
      mode => "755";
}

