#!/opt/cfengine/bin/cf-agent --inform

bundle common g
{
  vars:
      "workdir" string => "/opt/enigmabox/cfengine-policies";
      "site" data => readjson("/box/.cf-site.json", 64000);
}



body common control
{
      bundlesequence => {
			  "system_network",
      };

      inputs => {
		  "$(g.workdir)/system_network/bundle.cf",
      };
}

